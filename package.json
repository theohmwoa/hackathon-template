{
  "name": "hackathon-template",
  "version": "1.0.0",
  "description": "VPS-first full-stack template with Supabase",
  "scripts": {
    "predev": "docker-compose up -d",
    "dev": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "logs": "pm2 logs",
    "logs:backend": "pm2 logs backend",
    "logs:frontend": "pm2 logs frontend",
    "monit": "pm2 monit",
    "status": "pm2 status",
    "kill": "pm2 kill",
    "postinstall": "cd backend && npm install && cd ../frontend && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm install && npm run docker:up && echo 'Waiting for database to be ready...' && sleep 5 && npm run dev"
  },
  "keywords": [
    "nestjs",
    "angular",
    "supabase",
    "postgresql",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "pm2": "^5.3.0"
  }
}
